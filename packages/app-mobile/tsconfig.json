{
	"extends": [
		"../../tsconfig.json",
		"@react-native/typescript-config/tsconfig.json",
	],
	"include": [
		"*.ts",
		"**/*.ts",
		"*.tsx",
		"**/*.tsx",
	],
	"exclude": [
		"node_modules",
		"**/node_modules",
		"**/*.test.ts",
		"**/*.test.tsx",
		"gulpfile.ts",
		"tools/*.ts",
	],
	"compilerOptions": {
		"target": "esnext",
		"module": "es2015",
		"noEmit": false,
		"baseUrl": ".",
		"allowImportingTsExtensions": false,
		"sourceMap": true,
		"diagnostics": true,
		"esModuleInterop": true,
		"ignoreDeprecations": "5.0",
		"lib": [
			"es2015",
			"es2020.string",
			"dom",
			"dom.iterable"
		],
		"paths": {
			"react": [
				"./node_modules/@types/react"
			]
		},
		"types": [
			"jest",
			"react-native"
		],
		"moduleSuffixes": [
			".ios",
			".android",
			".native",
			""
		]
	}
}
