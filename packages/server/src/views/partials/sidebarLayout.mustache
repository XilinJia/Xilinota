	<div style="display: flex; margin-right: 3rem; background-color: #f5f5f5; padding: 1.5rem;">
		<aside class="menu">
			{{#sidebarMenu}}
				<p class="menu-label">{{title}}</p>
				<ul class="menu-list">
					{{#children}}
